<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xui_config_color_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/xui_config_color_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <com.xuexiang.xui.widget.edittext.MultiLineEditText
            android:id="@+id/mlet_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:mlet_maxCount="500"
            app:mlet_hintText="这一刻的想法..."
            app:mlet_showSurplusNumber="true"
            app:mlet_isFixHeight="false"
            />


        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/rb_submit"
            style="@style/RoundButton.Auto"
            android:layout_marginTop="20dp"
            android:text="发表"
            android:layout_gravity="end"
            android:textColor="@color/xui_default_round_btn_white_text"
            app:rb_backgroundColor="@color/colorPrimary"
            app:rb_borderColor="@color/white" />


    </LinearLayout>




</LinearLayout>